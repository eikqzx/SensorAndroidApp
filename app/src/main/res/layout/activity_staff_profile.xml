<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rellayStaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grad"
        android:paddingBottom="20dp">
        <Button
            android:id="@+id/staffUpdateBtn"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/staffpic"
            android:background="@drawable/margin_true_button"
            android:fontFamily="@font/sriracha"
            android:text="แก้ไขข้อมูลส่วนตัว"
            android:textColor="@color/white"
            android:textSize="13dp"
            />
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/staffpic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linelaystaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rellayStaff"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/linestaffemail"
            android:layout_width="397dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/followers"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:id="@+id/tvStaffEmail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:fontFamily="@font/sriracha"
                android:text="ข้อมูลส่วนตัวของ"
                android:textColor="@color/white"
                android:textSize="18dp"></TextView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/linelaystaff"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sriracha"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="ชื่อ"
            android:textColor="@color/bluesky"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/tvStaffName"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sriracha"
            android:text="x"
            android:textColor="#000000"
            android:textSize="18sp"></TextView>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sriracha"
            android:text="วันเกิด"
            android:textColor="@color/bluesky"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/tvStaffAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sriracha"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sriracha"
            android:text="เพศ"
            android:textColor="@color/bluesky"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/tvStaffSex"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sriracha"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sriracha"
            android:text="เบอร์โทรศัพท์"
            android:textColor="@color/bluesky"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/tvStaffPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sriracha"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp" />
        <Button
            android:id="@+id/stafftextBack"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="102dp"
            android:layout_height="45dp"
            android:fontFamily="@font/sriracha"
            android:background="@drawable/margin_false_button"
            android:textColor="@color/white"
            android:text="ปิด" />
    </LinearLayout>

</RelativeLayout>